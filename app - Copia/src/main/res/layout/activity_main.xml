<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/limpar"
            style="@style/operators_tv"
            android:text="C"/>
        <TextView
            android:id="@+id/divisao"
            style="@style/operators_tv"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sete"
            style="@style/number_tv"
            android:text="7"/>
        <TextView
            android:id="@+id/oito"
            style="@style/number_tv"
            android:text="8"/>
        <TextView
            android:id="@+id/nove"
            style="@style/number_tv"
            android:text="9"/>
        <TextView
            android:id="@+id/multiplicacao"
            style="@style/operators_tv"
            android:text="x"/>
    </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:orientation="horizontal">
     <TextView
         android:id="@+id/quatro"
         style="@style/number_tv"
         android:text="4"/>
     <TextView
         android:id="@+id/cinco"
         style="@style/number_tv"
         android:text="5"/>
     <TextView
         android:id="@+id/seis"
         style="@style/number_tv"
         android:text="6"/>
     <TextView
         android:id="@+id/menos"
         style="@style/operators_tv"
         android:text="-"/>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/um"
            style="@style/number_tv"
            android:text="1"/>
        <TextView
            android:id="@+id/dois"
            style="@style/number_tv"
            android:text="2"/>
        <TextView
            android:id="@+id/tres"
            style="@style/number_tv"
            android:text="3"/>
        <TextView
            android:id="@+id/mais"
            style="@style/operators_tv"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ponto"
            style="@style/number_tv"
            android:text="."/>
        <TextView
            android:id="@+id/zero"
            style="@style/number_tv"
            android:text="0"/>
        <ImageView
            android:id="@+id/backspace"
            style="@style/number_tv"
            android:src="@drawable/backspace"
            android:scaleType="center"
            android:text="apagar"/>
        <TextView
            android:id="@+id/igual"
            style="@style/operators_tv"
            android:text="="/>
    </LinearLayout>
</LinearLayout>

